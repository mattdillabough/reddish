<% content_for :stylesheets do %>
  <link rel="stylesheet" type="text/css" href="/css/index.css"/>
<% end %>

<div id="header">
  <div id="title">
    Reddish
  </div>
  <div id="topics">
    <ul>
      <li><a href="/">All</a></li>
      <% @categories.each do | category | %>
      <% if params[:id] == category[0].to_s %>
        <% category_class = 'selected' %>
      <% end %>
      
      <li>
        <a class="<%= category_class %>" href="/categories/<%= category[1] %>/<%= category[0] %>">
          <%= category[1] %>
        </a>
      </li>
      <% end %>
    </ul>
  </div>
  <div id="user-bar">
    <% if @username %>
      <a href="/users/<%= @username %>"><%= @username %></a> |
    <% else %>
      <a href="/login">login</a> | <a href="/register">register</a> |
    <% end %>
    <a href="">preference</a> | <a href="/logout">logout</a>
  </div>
</div>

<div id="panels">
  <div id="center-panel">
    <% if @flash %>
      <div id="flash-msg"><%= @flash %></div>
    <% end %>
    <!--<div id="featured-post">
      This is the feaured post. It is very featured. It features its features very well.
    </div>-->
    <% if params[:name] && params[:id] %>
        <div class="links">
          <% if @category_links.size > 0 %>
            <% @category_links.each do |link|%>
              <div class="link">
                <div><%= link[0] %>: <a href="<%= link[3] %>"><%= link[1] %></a></div>
                <div><span class="description"><%= link[2] %></span> <span class="category">(<%= link[5] %>)</span></div>
              </div>
            <% end %>
          <% else %>
            <p> Either this category does not exist, or there are no links in the category. </p>
          <% end %>
        </div>
      <% else %>
        <div class="category">
          <% @links.each do |link|%>
            <div class="link">
              <div><%= link[0] %>: <a href="http://<%= link[3] %>"><%= link[1] %></a></div>
              <p class="description"><%= link[2] %></p>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>

  <div id="right-panel">
    <div>
      <form>
        <input id="search" type="text" placeholder="search reddull">
      </form>
    </div>

    <div id="submit-post">
      <form method="get" action="/links/new">
        <button class="post-button" type="submit">Submit a new link</button>
      </form>
      <button class="post-button" type="button">Submit a new text post</button>
    </div>

    <div class="featured-ad">
    </div>
    <div class="discuss-ad">
      <a id="discuss-ad" href="">discuss this ad on reddit</a>
    </div>
  </div>
